{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "angular-cli-project": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "m",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "less"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-builders/custom-webpack:browser",
                    "options": {
                        "aot": true,
                        "customWebpackConfig": {
                            "path": "./extra-webpack.config.js",
                            "replaceDuplicatePlugins": true,
                            "mergeStrategies": {
                                "externals": "prepend"
                            }
                        },
                        "lazyModules": [
                            "src/app/modules/lazy-runtime/lazy-runtime.module"
                        ],
                        "outputPath": "dist/angular-cli-project/browser",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.app.json",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/manifest.json"
                        ],
                        "statsJson": true,
                        "styles": [
                            {
                                "input": "src/assets/themes/base/styles/base.less",
                                "bundleName": "base"
                            }
                        ],
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "src/assets/themes/base/styles/common"
                            ]
                        },
                        "scripts": [
                            {
                                "input": "src/global.script.ts",
                                "bundleName": "renamed-global"
                            }
                        ]
                    },
                    "configurations": {
                        "hmr": {
                            "fileReplacements": [
                                {
                                    "src": "src/environments/environment.ts",
                                    "replaceWith": "src/environments/environment.hmr.ts"
                                }
                            ]
                        },
                        "production": {
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": true,
                            "namedChunks": false,
                            "aot": true,
                            "extractCss": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "serviceWorker": true
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "angular-cli-project:build"
                    },
                    "configurations": {
                        "hmr": {
                            "hmr": true,
                            "browserTarget": "angular-cli-project:build:hmr"
                        },
                        "production": {
                            "browserTarget": "angular-cli-project:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "angular-cli-project:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "karmaConfig": "src/karma.conf.js",
                        "scripts": [],
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            "src/manifest.json"
                        ]
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "src/tsconfig.app.json",
                            "src/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                },
                "server": {
                    "builder": "@angular-devkit/build-angular:server",
                    "options": {
                        "outputPath": "dist/angular-cli-project/server",
                        "main": "server.ts",
                        "tsConfig": "src/tsconfig.server.json",
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "src/assets/themes/base/styles/common"
                            ]
                        }
                    },
                    "configurations": {
                        "production": {
                            "outputHashing": "media",
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "sourceMap": false,
                            "optimization": true
                        }
                    }
                },
                "serve-ssr": {
                    "builder": "@nguniversal/builders:ssr-dev-server",
                    "options": {
                        "browserTarget": "angular-cli-project:build",
                        "serverTarget": "angular-cli-project:server"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "angular-cli-project:build:production",
                            "serverTarget": "angular-cli-project:server:production"
                        }
                    }
                },
                "prerender": {
                    "builder": "@nguniversal/builders:prerender",
                    "options": {
                        "browserTarget": "angular-cli-project:build:production",
                        "serverTarget": "angular-cli-project:server:production",
                        "routes": [
                            "/"
                        ]
                    },
                    "configurations": {
                        "production": {}
                    }
                }
            }
        },
        "angular-cli-project-e2e": {
            "root": "e2e/",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "angular-cli-project:serve"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": "e2e/tsconfig.e2e.json",
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "angular-cli-project"
}
